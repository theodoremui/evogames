    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port",
                "8000"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "gunicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "gunicorn",
            "args": [
                "main:app",
                "--bind",
                "0.0.0.0:8000",
                "--reuse-port",
                "--reload"
            ]
        }
    ]
}